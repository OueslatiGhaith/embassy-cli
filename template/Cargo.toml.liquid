[package]
name = "{{ project-name }}"
version = "0.1.0"
edition = "2021"

[dependencies]
{% if vendor == "ST" -%}
embassy-stm32 = { version = "{{ versions_embassy-stm32 }}", features = ["nightly", "defmt", "time-driver-any", "{{ mcu }}", "memory-x", "exti"] }
{% elsif vendor == "Nordic" -%}
embassy-nrf = { version = "{{ versions_embassy-nrf }}", features = ["nightly", "defmt", "{{ mcu }}", "time-driver-rtc1", "gpiote"] }
{% elsif vendor == "Raspberry" -%}
embassy-rp = { version = "{{ versions_embassy-rp }}", features = ["defmt", "nightly", "time-driver"] }
{% endif -%}
embassy-executor = { version = "{{ versions_embassy-executor }}", features = ["nightly", "arch-cortex-m", "executor-thread", "integrated-timers"] }
embassy-time = { version = "{{ versions_embassy-time }}", features = ["defmt", "defmt-timestamp-uptime", "tick-hz-32_768"] }
embassy-sync = { version = "{{ versions_embassy-sync }}", features = ["defmt"] }
embassy-futures = { version = "{{ versions_embassy-futures }}" }

panic-probe = { version = "0.3" }

defmt = { version = "0.3" }
defmt-rtt = { version = "0.4" }

cortex-m = { version = "0.7.6", features = ["critical-section-single-core"] }
cortex-m-rt = "0.7.0"

futures = { version = "0.3.17", default-features = false, features = ["async-await"] }

[patch.crates-io]
{% if vendor == "ST" -%}
embassy-stm32 = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }
{% elsif vendor == "Nordic" -%}
embassy-nrf = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }
{% elsif vendor == "Raspberry" -%}
embassy-rp = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }
{% endif -%}
embassy-executor = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }
embassy-time = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }
embassy-sync = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }
embassy-futures = { git = "https://github.com/embassy-rs/embassy" {% if commit %}, commit = "{{ commit }}" {% endif %} }